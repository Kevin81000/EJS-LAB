<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Menu - <%= restaurant.name %></title>
</head>
<body>
  <main>
    <h2>Menu</h2>
    
    <h3>Mains</h3>
    <ul>
      <% menu.forEach(item => { %>
        <% if (item.category === 'mains') { %>
          <li><%= item.name %> - $<%= item.price.toFixed(2) %></li>
        <% } %>
      <% }); %>
    </ul>

    <h3>Desserts</h3>
    <ul>
      <% menu.forEach(item => { %>
        <% if (item.category === 'desserts') { %>
          <li><%= item.name %> - $<%= item.price.toFixed(2) %></li>
        <% } %>
      <% }); %>
    </ul>

    <h3>Sides</h3>
    <ul>
      <% menu.forEach(item => { %>
        <% if (item.category === 'sides') { %>
          <li><%= item.name %> - $<%= item.price.toFixed(2) %></li>
        <% } %>
      <% }); %>
    </ul>
  </main>
</body>
</html>
  