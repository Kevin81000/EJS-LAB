<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu - <%= restaurant?.name || 'The Green Byte Bistro' %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('partials/nav') %>
  <main>
    <h1>Full Menu</h1>
    <% if (restaurant?.menu && restaurant.menu.length > 0) { %>
      <div class="menu-section">
        <% restaurant.menu.forEach(item => { %>
          <div class="menu-item">
            <h3><%= item.name %><%= item.rating === 5 ? ' ðŸŒŸ' : '' %></h3>
            <p><strong>Price:</strong> $<%= item.price.toFixed(2) %></p>
            <p><strong>Rating:</strong> <%= item.rating %>/5</p>
            <p><strong>Details:</strong> <%= item.details %></p>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p>No menu items available.</p>
    <% } %>

  <h2><%= restaurant?.name || 'The Green Byte Bistro' %></h2>
    <nav>
      <a href="/">Back to Home</a>
      <a href="/menu/mains">Mains</a>
      <a href="/menu/desserts">Desserts</a>
      <a href="/menu/sides">Sides</a>
    </nav>
  </main>
  <%- include('partials/footer') %>
</body>
</html>